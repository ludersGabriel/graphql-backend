datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  role      Role     @default(USER)
  username  String   @unique
  name      String
  password  String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
